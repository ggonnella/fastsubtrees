#!/usr/bin/env python3
"""
Parse a given tabular file and add a new leaf node
to the given tree

Usage:
  fastsubtrees-add-subtree [options] <pymodule> <inputfile> <nodefile>

Arguments:
  <pymodule>        Some module for python which defines the function get_element_parent_id
                    for yielding the element and parent ids
  <inputfile>       TSV file containing elements and parents
  <nodefile>        File containing the tree data

Options:
  --quiet      be quiet
  --debug      print debug messages
"""

import importlib
from docopt import docopt
from pathlib import Path
from fastsubtrees import Tree, _scripts_support


def main(args):
    modulename = Path(args["<pymodule>"]).stem
    spec = importlib.util.spec_from_file_location(modulename, args["<pymodule>"])
    m = importlib.util.module_from_spec(spec)
    spec.loader.exec_module(m)
    elemparentid = m.ElementParentIdGenerator(args["<inputfile>"])
    generator = elemparentid.get_element_parent_id()
    tree = Tree.from_file(args["<nodefile>"])
    tree.add_subtree(generator)
    tree.to_file(args["<nodefile>"])


if __name__ == "__main__":
    args = docopt(__doc__, version="0.1")
    _scripts_support.setup_verbosity(args)
    main(args)
